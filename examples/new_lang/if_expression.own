
extern("c") fn puts(str_to_print u8*) i32
extern("c") fn printf(str_to_print_2 u8*, args any...) i32

fn yes() i32 {
    return 1
}

fn yes2() i32 {
    return 2
}

fn no() i32 {
    return 0
}

fn test_return_msg() i32 {
    // test that there is no diagnostic "no return statement", etc.
    if 8*3 == 0 {
        return 0
    } else if 8*1 == 1 {
    } else {
        return 2
    }
    return 4
}

fn main() i32 {
    if 8*3 < 5 {
        puts("no");
    }
    if 8*3 < 50 {
        puts("yes");
    }

    if 8*3 - 1 < 24 {
        puts("yes2");
    }
    if 8*3 + 1 < 25 {
        puts("no2");
    }

    if yes() {
        puts("yes3");
    }
    if yes2() {
        // 2 also is considered to be true
        puts("yes3.2");
    }
    if no() {
        puts("no3");
    }

    if 2 {
        puts("yes4.2");
    }
    if 1 {
        puts("yes4");
    }
    if 0 {
        puts("no4");
    }
    if yes() != 0 {
        puts("yes5");
    }
    if yes() != 1 {
        puts("no5");
    }

    let num_yes2 i32 = 2;
    let num_yes i32 = 1;
    let num_no i32 = 0;
    if num_yes2 {
        puts("yes6.2");
    }
    if num_yes {
        puts("yes6");
    }
    if num_no {
        puts("no6");
    }

    if !num_no {
        puts("yes7");
    }
    if !num_yes {
        puts("no7");
    }
    if !num_yes2 {
        puts("no7.2");
    }

    if !no() {
        puts("yes8");
    }
    if !yes() {
        puts("no8");
    }

    test_return_msg()

    return 0
}
