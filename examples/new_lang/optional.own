extern("c") fn printf(str_to_print u8*, args any...) i32
extern("c") fn isdigit(character i32) i32

type Optional sum(<ItemType>) {
    some ItemType
    none
}

type Optional_int sum {
    some i32
    none
}

type ParseError struct {
    dummy i32
}

type Result sum(<SuccessType, ErrorType>) {
    ok SuccessType
    error ErrorType
}

type Token sum {
    number i32
    string u8*
}

fn token_print(token Token) {
    switch token {
        case Token.number(num): printf("token is number: %d\n", num)
        case Token.string(str): printf("token is string: %s\n", str)
    }
}

