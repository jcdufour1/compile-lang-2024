
io :: import = std.io

add :: fn(<NumType>)(lhs NumType, rhs NumType) NumType {
    if rhs < 0 {
        return add(<NumType>)(lhs, rhs + 1) - 1
    }
    if rhs == 0 {
        return lhs
    }
    return add(<NumType>)(lhs, rhs - 1) + 1
}

add_i32 :: fn(lhs i32, rhs i32) i32 {
    if rhs < 0 {
        return add_i32(lhs, rhs + 1) - 1
    }
    if rhs == 0 {
        return lhs
    }
    return add_i32(lhs, rhs - 1) + 1
}

main :: fn() i32 {
    let num i32 = 78
    io.printf("%d\n", add(<i32>)(num, 33))
    io.printf("%d\n", add_i32(num, 34))

    return 0
}
