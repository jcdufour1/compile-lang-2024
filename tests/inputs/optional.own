    number2 util.Optional(<i32>) := .some(87)
    number3 util.Optional(<i64>) := .none
    number4 util.Optional(<i64>) := .some(91)
    result Result(<i32, ParseError>) := .error({.dummy = 8})
    result2 Result(<Token, ParseError>) := .ok(.number(7))

    switch number {
        case .some(num): io.printf("test 21: got number: %d\n", num)
        case .none: io.printf("test 21: got nothing\n")
    }

    switch number2 {
