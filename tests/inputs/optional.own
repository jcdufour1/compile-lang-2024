io :: import = std.io
util :: import = std.util

Optional_int :: enum {
    some i32
    none
}

ParseError :: struct {
    dummy i32
}

Result :: enum(<SuccessType, ErrorType>) {
    ok SuccessType
    error ErrorType
}

Token :: enum {
    number i32
    string u8*
}

token_print :: fn(token Token) {
    switch token {
        case Token.number(num): io.printf("token is number: %d\n", num)
        case Token.string(str): io.printf("token is string: %s\n", str)
    }
}

