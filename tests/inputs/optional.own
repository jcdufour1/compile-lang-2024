    number4 util.Optional(<i64>) := util.Optional(<i64>).some(91)
    result Result(<i32, ParseError>) := Result(<i32, ParseError>).error({.dummy = 8})

    switch number {
        case util.Optional(<i32>).some(num): io.printf("test 2: got number: %d\n", num)
        case util.Optional(<i32>).none: io.printf("test 2: got nothing\n")
    }

    switch number2 {
        case util.Optional(<i32>).some(num): io.printf("test 4: got number: %d\n", num)
        case util.Optional(<i32>).none: io.printf("test 4: got nothing\n")
    }

    switch number3 {
        case util.Optional(<i64>).some(num): io.printf("test 6: got number: %d\n", num)
        case util.Optional(<i64>).none: io.printf("test 6: got nothing\n")
    }

    switch number4 {
        case util.Optional(<i64>).some(num): io.printf("test 8: got number: %d\n", num)
