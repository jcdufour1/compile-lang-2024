type rt import = std.runtime

extern("c") fn printf(format_string u8*, args opaque...) i32

fn do_thing(should_succeed u1) rt.Optional(<i32>) {
    if should_succeed => return .some(9)
    return .none
}

fn do_thing_with_err_val(should_succeed u1) rt.Result(<i32, i64>) {
    if should_succeed => return .ok(9)
    return .error(27)
}

type FALSE def = 0
type TRUE def = 1

fn thing1() {
    let num u8 = do_thing(TRUE)?
    printf("num = %d\n", num)
}

fn thing2() rt.Result(<i32, u8>) {
    do_thing_with_err_val(TRUE)?
    return .ok(8)
}

fn thing3() rt.Result(<i32, u8>) {
    do_thing(TRUE)?
    return .ok(8)
}

fn main() i32 {
    thing1()
    thing2()
    thing3()

    return 0
}
