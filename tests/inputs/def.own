
io :: import = std.io
util :: import = std.util

Opt :: def = util.Optional
print :: def = io.printf

add_internal :: fn(<NumType>)(lhs NumType, rhs NumType) NumType {
    return lhs + rhs
}

add :: def = add_internal

main :: fn() i32 {
    print("hello\n")
    print("%d\n", add(<i32>)(54, 3))

    let opt Opt(<i32>) = .some(43)

    switch opt {
        case .some(num): print("%d\n", num)
        case .none: print("nothing\n")
    }

    return 0
}
