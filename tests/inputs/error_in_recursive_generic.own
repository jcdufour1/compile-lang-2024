type io import = std.io

fn add(lhs NumType, rhs NumType, NumType Type) NumType {
    if rhs < 0 {
        return add(lhs - 1, rhs + 1, NumType)
    } 
    if rhs > 0 {
        return add(lhs + 1, rhs - 1, i31)
    }
    return lhs
}

fn add2(lhs NumType, rhs NumType, NumType Type) NumType {
    if rhs < 0 {
        return add2(lhs - 1, rhs + 1)
    } 
    if rhs > 0 {
        return add2(lhs + 1, rhs - 1, NumType)
    }
    return lhs
}

fn add3(lhs NumType, rhs NumType, NumType Type) NumType {
    if rhs < 0 {
        return add2(lhs - 1, rhs + 1)
    } 
    if rhs > 0 {
        return add2(lhs + 1, rhs - 1, NumType)
    }
    return lhs
}

fn main() i32 {
    io.printf("%d\n", add(56, -34, i32))
    io.printf("%d\n", add2(57, -3, i32))
    io.printf("%d\n", add3(58, -2))
    return 0
}
