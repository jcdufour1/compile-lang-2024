

c :: import = std.libc
util :: import = std.util
posix :: import = std.posix

srand :: fn(seed util.Optional(<i32>) = .none) {
    if .some(num) := seed {
        c.srand(num)
        return
    }
    c.srand(unsafe_cast<i32>posix.time(util.null(<u64>)()))
}

// min and max are inclusive
int_range :: fn(min i32, max i32) i32 {
    return min + c.rand()%(max - min)
}
